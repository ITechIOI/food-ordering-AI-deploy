# ===================================
# üèóÔ∏è Build Stage
# ===================================
FROM python:3.11-slim as builder

WORKDIR /app

# C√†i g√≥i c·∫ßn thi·∫øt ƒë·ªÉ build + d·ªçn s·∫°ch cache ngay sau ƒë√≥
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential gcc curl && \
    rm -rf /var/lib/apt/lists/*

# C·∫≠p nh·∫≠t pip
RUN pip install --upgrade pip

# Sao ch√©p requirements.txt v√† c√†i c√°c g√≥i (kh√¥ng c·∫ßn l·ªçc torch n·ªØa n·∫øu ƒë√£ b·ªè kh·ªèi file)
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy to√†n b·ªô m√£ ngu·ªìn
COPY . .

# ===================================
# üöÄ Runtime Stage
# ===================================
FROM python:3.11-slim

WORKDIR /app

# Copy to√†n b·ªô dependencies t·ª´ stage builder
COPY --from=builder /usr/local /usr/local

# Copy project source
COPY . .

# M·ªü c·ªïng FastAPI
EXPOSE 8000

# Ch·∫°y FastAPI app
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
